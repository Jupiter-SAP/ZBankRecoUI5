<mvc:View
    xmlns:uxap="sap.uxap"
    xmlns:f="sap.ui.layout.form"
    xmlns:t="sap.ui.table"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:smartTable="sap.ui.comp.smarttable"
    controllerName="zbankrecoapp.controller.View1"
    class="myFullHeight"
>
    <uxap:ObjectPageLayout
        id="ChangeProjectPageOnly"
        upperCaseAnchorBar="false"
        showFooter="true"
        class="myFullHeight myNormalTitle"
        enableLazyLoading="false"
    >
        <!-- Header -->
        <uxap:headerTitle>
            <uxap:ObjectPageHeader id="_IDGenObjectPageHeader">
                <uxap:actions>

                    <Button
                        id="_IDGenButton4"
                        text="GetBankRecoID"
                        press="onGetBankrecoid"
                    />

                    <Button
                        id="_IDGenButton"
                        text="Fetch Data"
                        visible="{= ${/isLockedButtonVisible} === true}"
                        press="onfetchandsave"
                    />
                    <Button
                        id="_IDGenButton1"
                        text="Mark"
                        visible="{= ${/isLockedButtonVisible} === true}"
                        press=".onMark"
                    />
                    <Button
                        id="_IDGenButton5"
                        text="Unmark"
                        visible="{= ${/isLockedButtonVisible} === true}"
                        press=".onUnMark"
                    />
                     <Button
                        id="_IDGenButtonPrint"
                        text="Print"
                        visible="{= ${/isPrintButtonVisible} === true}"
                        press=".onPrint"
                    />
                     <Button
                        id="_IDGenButton51"
                        text="Lock"
                        visible="{= ${/isLockedButtonVisible} === true}"
                        press=".onLock"
                    />
                    <Button
                        id="_IDGenButton6"
                        text="Download"
                        visible="{= ${/isDownloadable} === true}"
                        press=".onDownload"
                    />
                    <Button
                        id="_IDGenButton7"
                        text="Validate"
                        visible="{= ${/isValidateVisible} === true}"
                        press="onValidate"
                    />
                    <Button
                        id="_IDGenButton8"
                        text="UTR Marking"
                        visible="{= ${/isLockedButtonVisible} === true}"
                        press="onUTRMarking"
                    />
                    <Button
                        id="clear"
                        text="Clear"
                        press=".onClear"
                    />  
                    <Button
                        id="delete"
                        text="Delete"
                        visible="{= ${/isLockedButtonVisible} === true}"
                        press=".onDelete"
                    />
                </uxap:actions>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>

        <!-- Sections -->
        <uxap:sections>
            <!-- General Information Section -->
            <uxap:ObjectPageSection
                id="_IDGenObjectPageSection"
                title="General Information"
                titleUppercase="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection">
                        <uxap:blocks>
                            <f:SimpleForm
                                id="_IDGenSimpleForm"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                labelSpanM="6"
                                labelSpanL="2"
                                columnsM="2"
                                columnsL="2"
                                columnsXL="2"
                                adjustLabelSpan="false"
                                width="100%"
                            >
                                <VBox
                                    id="_IDGenVBox1"
                                    width="50%"
                                >
                                    <Label
                                        id="_IDGenLabel1"
                                        text="Bank :"
                                    />
                                    <Input
                                        id="_IDGenInput"
                                        value="{/Bank}"
                                        width="300px"
                                        showValueHelp="true"
                                        valueHelpRequest=".onBankValueHelp"
                                        editable="{/isEditable}"
                                    />

                                    <Label
                                        id="_IDGenLabel19"
                                        text="Bank Name :"
                                    />
                                    <Input
                                        id="_IDGenInput6"
                                        value="{/BankName}"
                                        width="300px"
                                        editable="false"
                                    />

                                    <Label
                                        id="_IDGenLabel2"
                                        text="Company :"
                                    />

                                    <Input
                                        id="_IDGenInput1"
                                        value="{/Company}"
                                        width="300px"
                                        showValueHelp="true"
                                        valueHelpRequest=".onCompanyValueHelp"
                                        editable="{/isEditable}"
                                    />
                                    <Label
                                        id="_IDGenLabel3"
                                        text="Status :"
                                    />
                                    <Input
                                        id="_IDGenInput2"
                                        value="{/Status}"
                                        width="300px"
                                        editable="false"
                                    />
                                </VBox>

                                <VBox
                                    id="_IDGenVBox2"
                                    width="50%"
                                >
                                    <Label
                                        id="_IDGenLabel20"
                                        text="Fiscal Year :"
                                    />
                                    <Input
                                        id="_IDGenInput4"
                                        value="{/FiscalYear}"
                                        width="300px"
                                        editable="{/isEditable}"
                                    />

                                    <Label
                                        id="_IDGenLabel4"
                                        text="Statement Upto :"
                                    />
                                    <DatePicker
                                        id="_IDGenDatePicker10"
                                        value="{/Statementdate}"
                                        width="300px"
                                        change=".onChangeDate"
                                        displayFormat="dd.MM.yyyy"
                                        valueFormat="yyyyMMdd"
                                        editable="{/isEditable}"
                                    />
                                    <Label
                                        id="_IDGenLabel5"
                                        text="Bank Reco Id :"
                                    />
                                    <Input
                                        id="_IDGenInput3"
                                        value="{/BankRecoId}"
                                        width="300px"
                                        editable="false"
                                    />
                                    <CheckBox
                                        id="_IDGenCheckBox"
                                        text="Remaining"
                                        selected="{/Remaining}"
                                        select="onRemainingSelect"
                                    />

                                </VBox>
                            </f:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Transactions Section -->
            <uxap:ObjectPageSection
                id="_IDGenObjectPageSection1"
                title="Transactions"
                titleUppercase="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection1">
                        <uxap:blocks>
                            <HBox
                                id="_IDGenHBox"
                                width="100%"
                                justifyContent="SpaceBetween"
                                alignItems="Start"
                            >
                                <!-- Book Transactions Table -->
                                <VBox
                                    id="_IDGenVBoxBook"
                                    width="48%"
                                >
                                    <Title
                                        id="_IDGenTitle"
                                        text="Book Transactions"
                                        level="H3"
                                    />
                                    <HBox id="_IDGenHBox1"
                                    justifyContent="End" >
                                    <Button id="_IDGenButton3" text="Export" press="onExportBook" />
                                     </HBox>
                                    <t:Table
                                        id="_IDGenTable"
                                        rows="{/BookTransactions}"
                                        rowMode="{ui>/rowMode}"
                                        selectionMode="MultiToggle"
                                        enableColumnReordering="true"
                                        width="100%"
                                        class="noScrollTable"
                                    >
                           
                                        <t:columns>
                                            <t:Column
                                                id="_IDGenColumn1"
                                                sortProperty="VoucherNo"
                                                filterProperty="VoucherNo"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel"
                                                        text="Voucher No."
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText"
                                                        text="{VoucherNo}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn7"
                                                sortProperty="Partycode"
                                                filterProperty="Partycode"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabe7"
                                                        text="Party Code"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText1"
                                                        text="{Partycode}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn2"
                                                sortProperty="Partyname"
                                                filterProperty="Partyname"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="16rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel6"
                                                        text="Party Name"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText2"
                                                        text="{Partyname}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn3"
                                                sortProperty="Paymenttype"
                                                filterProperty="Paymenttype"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel7"
                                                        text="Payment Type"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText3"
                                                        text="{Paymenttype}"
                                                    />
                                                </t:template>
                                            </t:Column>

                                            <t:Column
                                                id="_IDGenColumn"
                                                sortProperty="AssignmentRef"
                                                filterProperty="AssignmentRef"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel22"
                                                        text="UTR"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText15"
                                                        text="{AssignmentRef}"
                                                    />
                                                </t:template>
                                            </t:Column>

                                            <t:Column
                                                id="_IDGenColumn4"
                                                sortProperty="Dates"
                                                filterProperty="Dates"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel8"
                                                        text="Date"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText4"
                                                        text="{Dates}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn5"
                                                sortProperty="NumericAmount"
                                                filterProperty="Amount"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel9"
                                                        text="Amount"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText5"
                                                        text="{Amount}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn6"
                                                sortProperty="ClearedDate"
                                                filterProperty="ClearedDate"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel10"
                                                        text="Cleared Date"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText6"
                                                        text="{ClearedDate}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn20"
                                                sortProperty="ClearedVoucherno"
                                                filterProperty="ClearedVoucherno"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel11"
                                                        text="Cleared Voucher No"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText7"
                                                        text="{ClearedVoucherno}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                        </t:columns>
                                   
                                  
                                  
                                 <t:footer>
					<OverflowToolbar id="infobar">
						<SegmentedButton id="rowMode" selectedKey="{ui>/rowMode}">
							                 
						</SegmentedButton>
					</OverflowToolbar>
				</t:footer>   </t:Table>
                                </VBox>

                                <VBox
                                    id="verticalId"
                                    class="verticalLine"
                                />

                                <!-- Statement Transactions Table -->
                                <VBox
                                    id="_IDGenVBoxStatement"
                                    width="48%"
                                >
                                    <Title
                                        id="_IDGenTitle1"
                                        text="Statement Transactions"
                                        level="H3"
                                    />
                                    <HBox id="_IDGenHBox2"
                                    justifyContent="End" >
                                    <Button id="_IDGenButton2"  text="Export" press="onExportStatement" />
                                     </HBox>
                                    <t:Table
                                        id="_IDGenTable2"
                                        rows="{/StatementTransactions}"
                                        selectionMode="MultiToggle"
                                        enableColumnReordering="true"
                                        rowMode="{ui>/rowMode}"
                                        width="100%"
                                        class="noScrollTable"
                                    >
                                        <t:columns>
                                            <t:Column
                                                id="_IDGenColumn8"
                                                sortProperty="VoucherNo"
                                                filterProperty="VoucherNo"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="16rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel12"
                                                        text="Voucher No"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText8"
                                                        text="{VoucherNo}"
                                                    />
                                                </t:template>
                                            </t:Column>

                                            <t:Column
                                                id="_IDGenColumn9"
                                                sortProperty="Dates"
                                                filterProperty="Dates"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel13"
                                                        text="Date"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText9"
                                                        text="{Dates}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn10"
                                                sortProperty="UTR"
                                                filterProperty="UTR"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="10rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel14"
                                                        text="UTR"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText10"
                                                        text="{Utr}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn11"
                                                sortProperty="PaymentType"
                                                filterProperty="PaymentType"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel15"
                                                        text="Payment Type"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText11"
                                                        text="{PaymentType}"
                                                    />
                                                </t:template>
                                            </t:Column>

                                            <t:Column
                                                id="_IDGenColumn12"
                                                width="20rem"
                                                sortProperty="Description"
                                                filterProperty="Description"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel16"
                                                        text="Description"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText12"
                                                        text="{Description}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                            <t:Column
                                                id="_IDGenColumn13"
                                                sortProperty="DecimalAmount"
                                                filterProperty="Amount"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel17"
                                                        text="Amount"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText13"
                                                        text="{Amount}"
                                                    />
                                                </t:template>
                                            </t:Column>

                                            <t:Column
                                                id="_IDGenColumn14"
                                                sortProperty="ClearedVoucherno"
                                                filterProperty="ClearedVoucherno"
                                                showFilterMenuEntry="true"
                                                showSortMenuEntry="true"
                                                visible="true"
                                                width="6rem"
                                            >
                                                <t:label>
                                                    <Label
                                                        id="_IDGenLabel18"
                                                        text="Cleared Voucher No"
                                                    />
                                                </t:label>
                                                <t:template>
                                                    <Text
                                                        id="_IDGenText14"
                                                        text="{ClearedVoucherno}"
                                                    />
                                                </t:template>
                                            </t:Column>
                                        </t:columns>
                                             <t:footer>
					<OverflowToolbar id="infobar1">
						<SegmentedButton id="rowMode1" selectedKey="{ui>/rowMode}">
						                 
						</SegmentedButton>
					</OverflowToolbar>
				</t:footer>
                                    </t:Table>
                                </VBox>
                            </HBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
